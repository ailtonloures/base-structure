{
  "name": "base-structure",
  "description": "Estrutura básica para aplicações em PHP 7",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "homepage": "https://github.com/ailtonloures/base-structure#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ailtonloures/base-structure.git"
  },
  "scripts": {
    "commit": "git-cz"
  },
  "devDependencies": {
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "husky": "^4.2.5"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
